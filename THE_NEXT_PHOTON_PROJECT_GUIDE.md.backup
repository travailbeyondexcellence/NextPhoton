  role: 'LEARNER'
};

// Missing property:
const invalidUser: User = {
  id: 'user_002',
  email: 'jane@example.com'
  // ‚ùå ERROR: Property 'name' is missing
};

// Extra property:
const extraUser: User = {
  id: 'user_003',
  email: 'bob@example.com',
  name: 'Bob',
  role: 'EDUCATOR',
  age: 30  // ‚ùå ERROR: Object literal may only specify known properties
