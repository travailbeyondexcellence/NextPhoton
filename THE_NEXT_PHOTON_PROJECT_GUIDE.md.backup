```typescript
const handleMultiSelect = (field: keyof EducatorFormData, value: string) => {
  const arr = watch(field) as string[];
  if (arr.includes(value)) {
    setValue(field, arr.filter((v) => v !== value) as any);
  } else {
    setValue(field, [...arr, value] as any);
  }
};
