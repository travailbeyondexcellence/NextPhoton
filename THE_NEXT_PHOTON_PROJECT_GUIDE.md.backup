    AND: [
      { status: 'SCHEDULED' },
      {
        OR: [
          { date: { gte: new Date() } },
          { isPriority: true }
        ]
      }
    ]
  }
  // Finds: status = 'SCHEDULED' AND (date >= today OR isPriority = true)
});

// String operations
await prisma.user.findMany({
